{
  "name": "@recruitment-api/source",
  "version": "1.0.0",
  "description": "New Recruitment System - Candidate Management API",
  "main": "dist/apps/recruitment-api/main.js",
  "license": "ISC",
  "scripts": {
    "build": "nx build recruitment-api",
    "start": "node dist/apps/recruitment-api/main.js",
    "start:dev": "nx serve recruitment-api",
    "start:debug": "nx serve recruitment-api --inspect",
    "lint": "nx lint",
    "test": "nx test",
    "test:watch": "nx test --watch",
    "test:cov": "nx test --coverage",
    "test:e2e": "nx e2e recruitment-api-e2e",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:dev:up": "docker compose up dev-db -d",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && timeout /t 3 /nobreak && npm run prisma:migrate:deploy",
    "db:test:up": "docker compose up test-db -d",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && timeout /t 3 /nobreak && dotenv -e .env.test -- prisma migrate deploy",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\""
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/axios": "^3.0.1",
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@nx/eslint-plugin": "^17.2.8",
    "@nx/jest": "^17.2.8",
    "@nx/js": "^17.2.8",
    "@nx/nest": "^17.2.8",
    "@nx/node": "^17.2.8",
    "@nx/webpack": "^17.2.8",
    "@nx/workspace": "^17.2.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "^17.2.8",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}

